{{#or system game}}
<div class="container">
  <nav class="navbar navbar-breadcrumb navbar-static-top" id="nav">
    <ul class="nav navbar-nav">
      <li class="col-sm-6 nav-system">{{#if system}}
        <a class="accordion-toggle {{#unless megamenu_system}}collapsed{{/unless}}" data-toggle="collapse" href="#megamenu-system">
            <h1 class="h3">{{system.name}}</h1>
        </a>
      {{/if}}</li>
      <li class="col-sm-6 nav-game">{{#if game}}
        <a class="accordion-toggle {{#unless megamenu_game}}collapsed{{/unless}}" data-toggle="collapse" href="#megamenu-game">
          <h2 class="h3">{{game.title}}</h2>
        </a>
      {{/if}}</li>
    </ul>
  </nav>
</div>
{{/or}}

<div class="container">
  {{#if system}} {{> megamenu-system}} {{/if}}
  {{#if game}} {{> megamenu-game}} {{/if}}

