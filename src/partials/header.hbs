       <a class="navbar-brand" href="/" rel="home"><img src="/emunova.gif" alt="Emu Nova"></a>
     </div>

     <div class="collapse navbar-collapse" id="collapsable-navbar">
       <ul class="nav navbar-nav navbar-right">
         <li><a href="/" rel="home">Accueil</a></li>
         <li><a href="http://forums.emunova.net">Forums</a></li>
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target="#">Contribuer <b class="caret"></b></a>

           <ul class="dropdown-menu">
             {{#link-edit page.src}}
             <li><a href="{{.}}">Modifier/corriger cette page</a></li>
             {{else}}
             <li class="disabled"><a href="{{.}}">Modifier/corriger cette page</a></li>
             {{/link-edit}}
           </ul>
         </li>
         <li class="dropdown">
           <a href="/about/" class="dropdown-toggle" data-toggle="dropdown" data-target="#">À propos  <b class="caret"></b></a>

           <ul class="dropdown-menu">
             <li><a href="/about/">À propos</a></li>
