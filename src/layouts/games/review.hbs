{{#import "system" "game"}}
  {{set-title "Test du jeu vidéo %s sur %s" game.title system.name}}
  {{> header.hbs}}
{{/import}}

<main>
  <h1>{{default page.title "Test du jeu vidéo"}}</h1>

  <div class="row">
    <div class="col-sm-9">
      {{#markdown}} {{> body}} {{/markdown}}

      {{#gte page.rating 0}}
        <p class="lead">
          <strong>Note finale</strong>: {{rating page.rating}}
        </p>
      {{/gte}}
    </div>

    <div class="col-sm-3">
      {{#if page.[Synthèse]}}
      <div class="well">
        <h2>En 2 clics</h2>

        <ul class="list-unstyled">
        {{#each page.[Synthèse]}}
          <li><strong>{{@key}}</strong>&nbsp;:&nbsp;{{default this "N/C"}}</li>
        {{/each}}
        </ul>
      </div>
      {{/if}}

      <div class="well">
        <h2>Ils l'ont testé</h2>

        <ul class="list-unstyled">
          {{#game_reviews system game}}
            <li>{{{stars rating}}} <a href="{{slug}}.html">{{user}}</a></li>
          {{/game_reviews}}
        </ul>
      </div>

      {{#gt game.images_count 0}}
        <div class="row row-gallery lazyload">
          {{#game_images system game 1}}
          <div class="col-sm-12 col-xs-4">
            <img class="img-thumbnail" src="../images/{{this.filename}}" alt="{{this.title}}"/>
          </div>
          {{/game_images}}
        </div>
      {{/gt}}

      <div class="well">
        <h2>Ils l'ont noté</h2>

        <ul class="list-unstyled">
            {{#game_breakdown game}}
              <li class="{{#unless count}}fade-out{{/unless}}">{{{stars rating}}} {{count}} {{inflect count "joueur" "joueurs"}}</li>
            {{/game_breakdown}}
        </ul>

        <a href="../ratings.html">
          <span class="lead">{{game.comments_count}}</span>
            {{inflect game.comments_count "note et commentaire" "notes et commentaires"}}
        </a>
      </div>
    </div>
  </div>
</main>

{{> footer.hbs}}