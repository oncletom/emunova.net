{{#import "system" "game"}}
  {{set-title "Test du jeu vidéo %s sur %s" game.title system.name}}
  {{set-megamenu "game"}}
  {{> header}}
{{/import}}

<main itemscope itemtype="http://data-vocabulary.org/Review">
  <h1>
    Test du jeu vidéo
    <span itemprop="itemreviewed">{{game.title}}</span>
  </h1>

  <meta itemprop="rating" content="{{page.rating}}" />
  <h2>{{rating page.rating}} <small itemprop="reviewer">par <strong>{{page.user}}</strong></small></h2>
  {{#if page.title}}<h3>{{page.title}}</h3>{{/if}}

  <div class="row">
    <div class="col-sm-8">
      <article itemprop="description">{{#markdown}} {{> body}} {{/markdown}}</article>

      <p>
        <a class="btn btn-primary" href="../"><span class="icon-home"></span> {{game.title}}</a>
      </p>
    </div>

    <div class="col-sm-4">
      {{#if page.[Synthèse]}}
      <div class="well">
        <h2>En 2 clics</h2>

        <ul class="list-unstyled">
        {{#each page.[Synthèse]}}
          <li><strong>{{@key}}</strong>&nbsp;:&nbsp;{{default this "N/C"}}</li>
        {{/each}}
        </ul>
      </div>
      {{/if}}

      <div class="well">
        <h2>Synthèse</h2>

        <p class="lead">{{rating game.rating}}</p>

        <ul class="list-unstyled">
            {{#game_breakdown game}}
              <li class="{{#unless this.count}}fade-out{{/unless}}">{{{stars this.rating}}} {{this.count}} {{inflect this.count "joueur" "joueurs"}}</li>
            {{/game_breakdown}}
        </ul>

        <a href="../ratings.html" class="btn btn-default">
          Lire les {{game.comments_count}} avis
        </a>
      </div>

      {{#gt game.images_count 0}}
        <div class="row row-gallery lazyload">
          {{#game_images system game 1}}
            <div class="col-sm-12">
              <img class="img-thumbnail img-elastic" src="../images/{{this.filename}}" alt="{{this.title}}"/>
            </div>
          {{/game_images}}
        </div>
      {{/gt}}
    </div>
  </div>
</main>

{{> footer}}
