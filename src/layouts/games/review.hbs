{{> header.hbs}}

{{import "systems/{system}" as "system"}}
{{import "games/{system}/{game}" as "game"}}

{{{sample-content}}}

<main>
  <h2>{{game.title}}</h2>

  <div class="lead">
    <p><strong>{{game.title}}</strong> est un jeu vidéo <a href="/{{system.id}}/">{{system.name}}</a>
      publié par <strong>{{game.editor}}</strong> en <strong>{{game.released}}</strong>.
    </p>
  </div>

  <div class="row">
    <div class="col-lg-9">
      {{#if page.title}} <h2>{{page.title}}</h2> {{/if}}
      {{#markdown}} {{> body}} {{/markdown}}

      {{#gte page.rating 0}}
        <p class="lead">
          <strong>Note finale</strong>: {{rating page.rating}}
        </p>
      {{/gte}}

      <p class="btn-toolbar">
        <a class="btn btn-primary" href="../">{{game.title}}</a>
        <a class="btn btn-default" href="./">Tests</a>
        <a class="btn btn-default" href="../ratings.html">Notes</a>
      </p>

      <p class="btn-toolbar">
        <a class="btn btn-primary" href="/{{system.id}}/">{{system.name}}</a>
      </p>
    </div>

    <div class="col-lg-3">
      {{#if page.[Synthèse]}}
      <div class="well">
        <h2>En 2 clics</h2>

        <ul class="list-unstyled">
        {{#each page.[Synthèse]}}
          <li><strong>{{@key}}</strong>&nbsp;:&nbsp;{{default this "N/C"}}</li>
        {{/each}}
        </ul>
      </div>
      {{/if}}
      <div class="well">
        <h2>Ils l'ont testé</h2>

        <ul class="list-unstyled">
          <li><span class="rating">*****</span> <a href="reviews/sylvain.html">Sylvain</a></li>
