{{#import "system"}}
    {{> header.hbs}}
{{/import}}

<main>
  <h2>{{system.name}}</h2>

  <div class="lead">
    <p><strong>{{system.name}}</strong> est un système conçu par <strong>{{system.manufacturer}}</strong>.
      {{#if system.alternate_names}}
        Il est également connu sous {{inflect system.alternate_names "le nom" "les noms"}}
        de {{inline system.alternate_names}}.
      {{/if}}
    </p>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Santé</th>
          <th>Titre</th>
          <th>Genres</th>
          <th>Année</th>
        </tr>
      </thead>
      <tbody>
      {{#system_games system}}
        <tr>
          <td>{{{stars rating}}}</td>
          <th><a href="./{{slug}}/">{{title}}</a></th>
          <td>{{inline genres}}</td>
          <td>{{released}}</td>
        </tr>
      {{else}}
        <tr>
          <td colspan="3">Aucun jeu pour le moment.</td>
        </tr>
      {{/system_games}}
      </tbody>
    </table>

    <p>
      <a class="btn btn-primary" href="/{{system.id}}/">{{system.name}}</a>
      <a class="btn btn-default disabled" href="/{{system.id}}/games/">Jeux</a>
      <a class="btn btn-default" href="/{{system.id}}/images/">Images</a>
    </p>
  </div>
</main>

{{> footer.hbs}}