{{#import "system" "game"}}
    {{> header.hbs}}
{{/import}}

<main>
  <h2>{{game.title}}</h2>

  <div class="lead">
    <p><strong>{{game.title}}</strong> est un jeu vidéo <a href="/{{system.id}}/">{{system.name}}</a>
      publié par <strong>{{game.editor}}</strong> en <strong>{{game.released}}</strong>.
    </p>
  </div>

  <div class="row">
    <div class="col-sm-9">
      {{#game_ratings system game true}}
      <div class="row">
        <div class="col-sm-3">
          <div class="well">
            <p class="lead">{{rating rating}}</p>
            <p>Par <em>{{user}}</em></p>
          </div>
        </div>

        <div class="col-sm-6">
          {{#if is_review}}
            <p>{{truncate review 250 "…"}}</p>

            <p><a class="btn btn-default" href="reviews/{{slug}}.html">
              Lire la suite du test de {{../../game.title}} par {{user}}
            </a></p>
          {{else}}
            {{#if title}}
              <h2>{{title}}</h2>
            {{/if}}

            {{#markdown}} {{review}} {{/markdown}}
          {{/if}}
        </div>
      </div>
      {{else}}
        <div class="alert alert-info">
          Il n'y pas encore de notation pour {{game.title}}.
        </div>
      {{/game_ratings}}
    </div>

    <div class="col-sm-3">
        {{#gt game.images_count 0}}
          <div class="row row-gallery lazyload">
              {{#game_images system game 3}}
                <div class="col-sm-12 col-xs-4">
                  <img class="img-thumbnail" data-src="images/{{image_url this.filename "md"}}" alt="{{this.title}}"/>
                </div>
              {{/game_images}}
          </div>
        {{/gt}}
    </div>
  </div>

  <p class="btn-toolbar clearfix">
    <a class="btn btn-primary" href="./">{{game.title}}</a>
    <a class="btn btn-default" href="./#reviews">Tests</a>
    <a class="btn btn-default disabled" href="ratings.html">Notes</a>
  </p>

  <p class="btn-toolbar">
    <a class="btn btn-primary" href="/{{system.id}}/">{{system.name}}</a>
    <a class="btn btn-default" href="/{{system.id}}/games/">Jeux</a>
    <a class="btn btn-default" href="/{{system.id}}/images/">Images</a>
  </p>
</main>

{{> footer.hbs}}