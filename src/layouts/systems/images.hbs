{{> header.hbs}}
{{import "systems/{system}" as "system"}}


<main>
  <h2>{{system.name}}</h2>

  <div class="lead">
    <p><strong>{{system.name}}</strong> est un système conçu par <strong>{{system.manufacturer}}</strong>.
      {{#if system.alternate_names}}
        Il est aussi connu sous les noms {{inline system.alternate_names}}.
      {{/if}}
    </p>
  </div>

  <h1>Galerie d'images {{system.name}}</h1>

  <div class="row row-gallery">
    <div class="col-sm-3">
      <img class="img-thumbnail" data-src="holder.js/300x300/auto" alt=""/>
    </div>
    <div class="col-sm-3">
      <img class="img-thumbnail" data-src="holder.js/300x300/auto" alt=""/>
    </div>
    <div class="col-sm-3">
      <img class="img-thumbnail" data-src="holder.js/300x300/auto" alt=""/>
    </div>
    <div class="col-sm-3">
      <img class="img-thumbnail" data-src="holder.js/300x300/auto" alt=""/>
    </div>
    <div class="col-sm-3">
      <img class="img-thumbnail" data-src="holder.js/300x300/auto" alt=""/>
    </div>
  </div>

  <p>
    <a class="btn btn-primary" href="/{{system.id}}/">{{system.name}}</a>
    <a class="btn btn-default" href="/games/{{system.id}}/">Jeux</a>
    <a class="btn btn-default disabled" href="/{{system.id}}/images/">Images</a>
  </p>
</main>

{{> footer.hbs}}