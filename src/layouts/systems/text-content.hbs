{{#import "system"}}
    {{> header.hbs}}
{{/import}}

<main>
    <h2>{{system.name}}</h2>

    <div class="lead">
      <p><strong>{{system.name}}</strong> est un système conçu par <strong>{{system.manufacturer}}</strong>.
        {{#if system.alternate_names}}
          Il est aussi connu sous les noms {{inline system.alternate_names}}.
        {{/if}}
      </p>
    </div>

    {{#if page.title}}
        <h1>{{page.title}}</h1>
    {{/if}}

    {{#markdown}} {{> body}} {{/markdown}}

    <p>
      <a class="btn btn-primary" href="./">Revenir à {{system.name}}</a>
    </p>
</main>

{{> footer.hbs}}