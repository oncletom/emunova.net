{
  "name": "emunova.net",
  "private": true,
  "version": "3.2.0",
  "description": "",
  "scripts": {
    "index": "node ./bin/index-content.js",
    "hugo:serve": "hugo serve",
    "hugo:build": "hugo --baseURL https://emunova.net",
    "test": "exit 0",
    "less": "lessc --include-path=static/less/lib:node_modules/bootstrap/less",
    "build": "run-p hugo:build 'build:*'",
    "build:js":
      "browserify -g [ uglifyify -c -m ] -o static/bundle.js static/assets/js/main.js",
    "build:css":
      "$npm_package_scripts_less static/less/core.less static/bundle.css",
    "generate-stats": "./bin/cache-games.js",
    "generate-thumbs": "run-s 'generate-thumbs:*'",
    "generate-thumbs:sq":
      "find ./content -type f \\( -name '*.jpg' -o -name '*.png' \\) \\( -not -name '*.sq.*' -not -name '*.md.*' \\) -exec sharp -i {} -o '{dir}/{name}.sq{ext}' resize 170 170 \\;",
    "generate-thumbs:md":
      "find ./content -type f -name '*.jpg' -not -name '*.sq.jpg' -not -name '*.md.jpg' -exec sharp -i {} -o '{dir}/{name}.md{ext}' resize 270 \\;",
    "start": "run-p hugo:serve 'watch:*'",
    "watch:js": "watchify -vd -o static/bundle.js static/assets/js/main.js",
    "watch:css": "nodemon -e less -w static/less -x 'npm run build:css'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oncletom/emunova.net.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oncletom/emunova.net/issues"
  },
  "engines": {
    "node": "8.x.x"
  },
  "dependencies": {
    "algoliasearch": "^3.14.0",
    "babel-preset-env": "^1.6.1",
    "bootstrap": "~3.1.0",
    "fast-sha256": "^1.0.0",
    "jquery": "^2.2.3",
    "less": "^2.7.3",
    "lodash.debounce": "^4.0.8",
    "sorttable": "github:oncletom/sorttable#develop"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "glob": "^7.1.2",
    "gray-matter": "^3.1.1",
    "js-yaml": "^3.10.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "sharp-cli": "oncletom/sharp-cli#fix/9",
    "uglifyify": "^4.0.4",
    "watchify": "^3.7.0"
  },
  "browser": {
    "bootstrap/collapse": "./node_modules/bootstrap/js/collapse.js",
    "bootstrap/transition": "./node_modules/bootstrap/js/transition.js",
    "bootstrap/dropdown": "./node_modules/bootstrap/js/dropdown.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["env"]
        }
      ]
    ]
  }
}
