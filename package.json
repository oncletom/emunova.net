{
  "name": "emunova.net",
  "private": true,
  "version": "3.2.0",
  "description": "",
  "scripts": {
    "index": "node ./bin/index-content.js",
    "hugo:serve": "hugo serve",
    "hugo:build": "hugo --baseURL https://emunova.net",
    "test": "exit 0",
    "less": "lessc --include-path=static/less/lib:node_modules/bootstrap/less",
    "build": "run-p hugo:build 'build:*'",
    "build:js": "browserify -g [ uglifyify -c -m ] -o static/bundle.js static/assets/js/main.js",
    "build:css": "$npm_package_scripts_less static/less/core.less static/bundle.css",
    "generate-thumbs": "run-s 'generate-thumbs:*'",
    "generate-thumbs:sq": "for DIR in $(ls ./content); do sharp -i $(ls content/${DIR}/images/*.jpg | grep --invert-match -E '.(sq|md).jpg') -o \"content/$DIR/images/{name}.sq{ext}\" resize 170 170; done",
    "generate-thumbs:md": "for DIR in $(ls ./content); do sharp -i $(ls content/${DIR}/images/*.jpg | grep --invert-match -E '.(sq|md).jpg') -o \"content/$DIR/images/{name}.md{ext}\" resize 270; done",
    "start": "run-p hugo:serve 'watch:*'",
    "watch:js": "watchify -vd -o static/bundle.js static/assets/js/main.js",
    "watch:css": "nodemon -e less -w static/less -x 'npm run build:css'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oncletom/emunova.net.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oncletom/emunova.net/issues"
  },
  "dependencies": {
    "algoliasearch": "^3.14.0",
    "babel-preset-env": "^1.6.1",
    "bootstrap": "~3.1.0",
    "fast-sha256": "^1.0.0",
    "jquery": "^2.2.3",
    "less": "^2.7.3",
    "lodash": "^4.11.1",
    "sorttable": "github:oncletom/sorttable#develop"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "hyperquest": "^2.1.2",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "sharp-cli": "^1.5.2",
    "uglifyify": "^4.0.4",
    "watchify": "^3.7.0"
  },
  "browser": {
    "bootstrap/collapse": "./node_modules/bootstrap/js/collapse.js",
    "bootstrap/transition": "./node_modules/bootstrap/js/transition.js",
    "bootstrap/dropdown": "./node_modules/bootstrap/js/dropdown.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  }
}
